<div class="text-bg-primary p-3 my-4">
    <h5>{{category}}</h5>
    <h2>{{title}}</h2>
    <p>{{breaklines description}}</p>
</div>
{{#each fields}}
    <div class="mb-3">
        <span class="badge text-bg-primary p-2">{{index}}</span><br>
        <label{{#unless (eq type "radio")}} for="ucd_{{name}}"{{/unless}} class="form-label">{{label}}</label>
        {{#if tooltip }}
            <a href="#" class="text-decoration-none float-end" data-bs-toggle="tooltip" data-bs-placement="top" title="{{tooltip}}"><i class="bi bi-question-circle"></i></a>
        {{/if}}

        {{#if (eq type "textarea")}}
            <textarea class="form-control" id="ucd_{{name}}" name="ucd[{{name}}]" rows="3"></textarea>
        {{/if}}
        {{#if (eq type "text")}}
            <input type="text" class="form-control" id="ucd_{{name}}" name="ucd[{{name}}]">
        {{/if}}
        {{#if (eq type "select")}}
            <select class="form-select" name="ucd[{{name}}]" id="ucd_{{name}}">
                <option selected>Open this select menu</option>
                {{#each options}}
                    <option value="{{value}}">{{label}}</option>
                {{/each}}
            </select>
        {{/if}}
        {{#if (eq type "radio")}}
            {{#each options}}
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="ucd[{{...name}}]" id="{{...name}}-{{@index}}" value="{{value}}">
                    <label class="form-check-label" for="{{...name}}-{{@index}}">{{label}}</label>
                </div>
            {{/each}}
        {{/if}}

        {{#if help }}
            <div class="form-text">{{help}}</div>
        {{/if}}
    </div>
{{/each}}
